{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --production --target bun --outdir build --minify",
    "start": "bun run ./build/index.js",
    "db:deploy": "bun prisma migrate deploy",
    "db:generate": "bun prisma generate"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.1",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@prisma/client": "^6.16.3",
    "better-auth": "^1.3.27",
    "elysia": "latest",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "bun-types": "latest",
    "prisma": "^6.16.3"
  },
  "module": "src/index.js"
}
